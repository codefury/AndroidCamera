<?xml version="1.0" encoding="utf-8"?>
<com.aviary.android.feather.sdk.internal.services.drag.DragLayer
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dragLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/foregroundTheme"
            android:orientation="vertical">

        <!-- main navbar ( title, apply and done buttons ) -->

        <include
                android:id="@+id/aviary_navbar"
                layout="@layout/aviary_navbar">
        </include>
        <View
                android:id="@+id/toolbar_shadow"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/aviary_navbar"
                android:background="@drawable/toolbar_shadow"/>
        <!-- main content view -->

        <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/aviary_bottombar"
                android:layout_below="@id/aviary_navbar"
                android:padding="@dimen/aviary_main_image_padding">

            <!-- optional image view container -->

            <RelativeLayout
                    android:id="@+id/drawing_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            </RelativeLayout>

            <!-- main image view -->
            <com.aviary.android.feather.sdk.widget.AviaryImageViewUndoRedo
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:scaleType="centerCrop"/>

            <!-- main loader, visible while loading the image at start -->
            <include
                    android:id="@+id/image_loading_view"
                    layout="@layout/aviary_main_loader">
            </include>
        </RelativeLayout>
        <View
                android:id="@+id/toolbar_shadow2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_above="@+id/aviary_bottombar"
                android:background="@drawable/toolbar_shadow_invert"/>
        <!-- bottom bar (tools, panels) -->

        <include
                android:id="@+id/aviary_bottombar"
                android:layout_width="match_parent"
                android:layout_height="?attr/aviaryBottomBarHeight"
                android:layout_alignParentBottom="true"
                layout="@layout/aviary_bottombar">
        </include>

        <!-- popup container dialog -->

        <RelativeLayout
                android:id="@+id/feather_dialogs_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/aviary_navbar"
                android:visibility="invisible">
        </RelativeLayout>

        <!-- hidden surface view -->

        <SurfaceView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible">
        </SurfaceView>
    </RelativeLayout>

</com.aviary.android.feather.sdk.internal.services.drag.DragLayer><!-- From: file:/Users/crugnola/Documents/git/aviary/Android-SDK/aviary-sdk/src/main/res/layout/aviary_main_view.xml --><!-- From: file:/D:/work/JuneR5/CreativeSDKRoot/creativesdk/CreativeSDKImage/src/main/res/layout/aviary_main_view.xml -->